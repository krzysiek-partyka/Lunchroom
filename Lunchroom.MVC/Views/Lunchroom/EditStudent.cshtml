@using Lunchroom.Domain.Entities
@model Lunchroom.Application.Student.StudentDto

@{
    ViewData["Title"] = "EditStudent";
}

<h1>EditStudent</h1>

<h4>StudentDto</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" class="form-control" type="hidden"/>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfLunches" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="NumberOfLunches" class="form-control"/>
                    <div class="input-group-append">
                        <button type="button" class="btn btn-danger" onclick="decreaseValue()">-</button>
                    </div>
                    <div class="input-group-append">
                        <button type="button" class="btn btn-success" onclick="increaseValue()">+</button>
                    </div>
                </div>
                <span asp-validation-for="NumberOfLunches" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClassroomName" class="control-label"></label>
                <select asp-for="ClassroomName" class="form-control" asp-items="Html.GetEnumSelectList<ClassroomName>()">
                    <option selected="selected" value="">Wybierz klasę</option>
                </select>
                <span asp-validation-for="ClassroomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/Lunchroom/Edit.js"></script>

}